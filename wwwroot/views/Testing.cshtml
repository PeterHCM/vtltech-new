@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core.Models.Blocks
@inherits UmbracoViewPage<Testing>
@{
    Layout = "layout.cshtml";
    var blocks = Model.Value<BlockGridModel>("contentBlocks");
}
<section class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 py-10">    
    <div class="max-w-screen-xl mx-auto py-8 px-6 md:px-12 lg:px-24">
        <div class="grid grid-cols-12 gap-6">
            @foreach (var block in blocks)
            {
                @Html.Partial($"Partials/blockgrid/{block.Content.ContentType.Alias}.cshtml", block)
            }
        </div>
    </div>
</section>

