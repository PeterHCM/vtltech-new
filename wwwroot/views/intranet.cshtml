@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    Layout = null;
    var settings = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "companySettings");    
    var isDarkMode = settings?.Value<bool>("themeToggle") ?? true;
    var pageClass = isDarkMode ? "bg-dark text-slogan" : "bg-white text-gray-800";
    var textClass = isDarkMode ? "text-slogan" : "text-gray-800";
    var bgClass = isDarkMode ? "bg-dark" : "bg-white";
    ViewData["Settings"] = settings;
    ViewData["PageClass"] = pageClass;  
    ViewData["TextClass"] = textClass;
    ViewData["BgClass"] = bgClass;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(settings?.Value("defaultMetaTitle") ?? "VTL Technologies")</title>
    <meta name="description" content="@(settings?.Value("defaultMetaDescription") ?? "Website công nghệ IoT & tự động hóa")" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Head", required: false)
</head>
<body class="@pageClass font-sans">
    @await Html.PartialAsync("Partials/Shared/Topbar")
    @await Html.PartialAsync("Partials/Shared/IntranetHeader")
    <main class="py-10 px-6 md:px-12 lg:px-24">
        @RenderBody()
    </main>
    @await Html.PartialAsync("Partials/Shared/Footer", settings)    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>