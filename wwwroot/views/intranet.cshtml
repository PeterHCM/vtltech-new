@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Extensions
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
    Layout = null;
    var settings = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "companySettings");

    // Check for null settings to prevent runtime errors.
    if (settings == null)
    {
        // Fallback or error message for missing settings
        <p>Error: Company settings not found.</p>
        return;
    }

    var companyName = settings.Value<string>("companyName") ?? "Viet Thang Loi Technology Company Limited";
    var pageTitle = $"{Model.Name} | {companyName}";
    var pageDescription = settings.Value<string>("defaultMetaDescription") ?? "Viet Thang Loi Technology Company Limited";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@pageTitle</title>
    <meta name="description" content="@pageDescription" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Head", required: false)

    {{-- Script to handle dark mode on initial page load --}}
    <script>
        (function() {
            if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                document.documentElement.classList.add('dark');
            } else {
                document.documentElement.classList.remove('dark');
            }
        })();
    </script>
</head>
<body class="bg-white text-gray-800 dark:bg-dark dark:text-slogan font-sans">
    @await Html.PartialAsync("Partials/Shared/Topbar")
    @await Html.PartialAsync("Partials/Shared/IntranetHeader")
    <main class="py-10 px-6 md:px-12 lg:px-24">
        @RenderBody()
    </main>
    @await Html.PartialAsync("Partials/Shared/Footer", settings)
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>