@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Extensions

@{
    var content = Model.Content as HeroBanner;
    var heading = content?.Heading;
    var subtitle = content?.Subtitle;
    var ctaLinks = content?.CtaLinks;
    var image = content?.Images?.FirstOrDefault();
    var icons = content?.Icons?.FirstOrDefault();
}

<section class="relative bg-white text-gray-800 dark:bg-dark dark:text-slogan py-20 px-6 md:px-12 lg:px-24 w-full">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center">

        <div class="text-center md:text-left">
            <div class="flex justify-center md:justify-start mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-10 h-10 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9h6v6H9z M4 4h16v16H4z" />
                </svg>
            </div>

            @if (!string.IsNullOrWhiteSpace(heading))
            {
                <h1 class="text-4xl font-bold mb-4 text-primary">@heading</h1>
            }

            @if (!string.IsNullOrWhiteSpace(subtitle))
            {
                <p class="text-lg mb-6 text-gray-600 dark:text-gray-400">@subtitle</p>
            }

            @if (ctaLinks != null && ctaLinks.Any())
            {
                <div class="flex flex-wrap justify-center md:justify-start gap-3">
                    @foreach (var link in ctaLinks)
                    {
                        var url = link.Url;
                        var label = link.Name;

                        if (!string.IsNullOrWhiteSpace(url) && !string.IsNullOrWhiteSpace(label))
                        {
                            <a href="@url" target="@(link.Target ?? "_self")"
                               class="inline-flex items-center gap-2 bg-primary text-white px-6 py-3 rounded hover:bg-secondary transition text-sm">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                                </svg>
                                @label
                            </a>
                        }
                    }
                </div>
            }
        </div>

        <div class="w-full">
            @if (image != null)
            {
                <img src="@image.Url()" alt="@image.Name" class="w-full h-auto rounded-lg shadow-xl" />
            }
            else
            {
                <div class="text-center italic text-gray-600 dark:text-gray-400">Chưa có ảnh được chọn</div>
            }
        </div>
    </div>
</section>