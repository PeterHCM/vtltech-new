@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Extensions
@using Umbraco.Cms.Core.Strings

@{
    var content = Model.Content;
    var title = content?.Value<string>("title");
    var bodyText = content?.Value<IHtmlEncodedString>("bodyText");
}
<section class="py-12 px-4 md:px-8 lg:px-24 bg-white">
    <div class="max-w-4xl mx-auto">
        @if (!string.IsNullOrWhiteSpace(title))
        {
            <h2 class="text-2xl md:text-3xl font-bold text-brand-gray-dark mb-4">
                @title
            </h2>
        }
        @if (bodyText != null && !string.IsNullOrWhiteSpace(bodyText.ToHtmlString()))
        {
            <div class="prose prose-sm md:prose-base text-brand-gray-light">
                @bodyText
            </div>
        }
    </div>
</section>