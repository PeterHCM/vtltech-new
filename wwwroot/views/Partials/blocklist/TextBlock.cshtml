@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>
@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Extensions
@using Umbraco.Cms.Core.Strings

@{
    var content = Model.Content;
    var title = content?.Value<string>("title");
    var bodyText = content?.Value<IHtmlEncodedString>("bodyText");
}
<section class="py-18 bg-white text-gray-800 dark:bg-dark dark:text-white">
    <div class="mx-auto">
        @if (!string.IsNullOrWhiteSpace(title))
        {
            <h2 class="text-2xl md:text-3xl font-bold mb-4 text-primary">
                @title
            </h2>
        }
        @if (bodyText != null && !string.IsNullOrWhiteSpace(bodyText.ToHtmlString()))
        {
            <div class="prose dark:prose-dark max-w-none text-justify">
                @Html.Raw(bodyText)
            </div>
        }
    </div>
</section>