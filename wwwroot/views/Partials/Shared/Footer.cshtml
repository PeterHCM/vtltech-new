@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>
@using Umbraco.Extensions
@using Umbraco.Cms.Core.Models
@using System.Globalization
@{
    // Get company settings from the Umbraco root node
    var settings = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "companySettings");
    // Default values
    var companyName = settings?.Value<string>("companyName") ?? "Viet Thang Loi Technology Company Limited";
    var companyDescription = settings?.Value<string>("companyDescription") ?? "Viet Thang Loi Technology Company Limited";
    var websiteLogo = settings.Value<IEnumerable<IPublishedContent>>("websiteLogoDark")?.FirstOrDefault() ?? settings.Value<IEnumerable<IPublishedContent>>("websiteLogoLight")?.FirstOrDefault(); // Fallback light nếu dark null
    var facebook = settings?.Value<IEnumerable<Link>>("facebookUrl")?.FirstOrDefault()?.Url ?? "#";
    var youtube = settings?.Value<IEnumerable<Link>>("youtubeUrl")?.FirstOrDefault()?.Url ?? "#";
    var zalo = settings?.Value<IEnumerable<Link>>("zaloUrl")?.FirstOrDefault()?.Url ?? "#";
    var messenger = settings?.Value<IEnumerable<Link>>("messengerUrl")?.FirstOrDefault()?.Url ?? "#";
    var workingHours = settings?.Value<string>("workingHours") ?? "08:00 - 17:00";
    workingHours=workingHours?.Replace("\n", "<br />");
    var slogan = settings?.Value<string>("companySlogan") ?? "Giải pháp công nghệ cho tương lai";
    var footerLinksName = settings?.Value<string>("footerLinksName") ?? "Liên kết hữu ích";
   
    var copyrightText = settings?.Value<string>("copyright")
        ?? "© 2025 Viet Thang Loi Technology Company Limited";
    var contactUs = settings?.Value<string>("contactUs") ?? "Liên hệ với chúng tôi";
    var followUs = settings?.Value<string>("followUs") ?? "Theo dõi chúng tôi";
    var request = Context?.Request;
    var fullUrl = string.Concat(
        request?.Scheme, "://",
        request?.Host.Value,
        request?.Path.Value,
        request?.QueryString.Value
    );
    var currentDomain = Context.Request.Host.Value;
    var linkAlias = currentDomain.Contains("intranet") ? "intranetFooterLinks" : "footerLinks";
    var links = settings?.Value<IEnumerable<Link>>(linkAlias) ?? Enumerable.Empty<Link>();
    var qrUrl = $"https://api.qrserver.com/v1/create-qr-code/?size=120x120&data={fullUrl}";
    var isIntranet = currentDomain.Contains("intranet");
}

<footer class="bg-gray-900 dark:bg-gray-950 py-12 mt-6">
    <div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Cột 1: Thông tin công ty -->
        <div class="flex flex-col items-start gap-4">
            <h4 class="text-white border-l-4 border-primary pl-4">@companyName</h4>
            @if (websiteLogo != null)
            {
                <img src="@websiteLogo.Url()" alt="@companyName logo" class="h-12 w-auto" />
            }
            
            <p class="text-white">@companyDescription</p>
        </div>
        <!-- Cột 2: Liên kết -->
        <div>
            <h4 class="text-white border-l-4 border-primary pl-4">@footerLinksName</h4>
            @if (links != null && links.Any())
            {
                ViewData["fileType"] = "arrowRight";
                <div class="text-white">
                    @Html.Partial("Partials/Shared/LinkList", links, ViewData)
                </div>
            }
        </div>
        <!-- Cột 3: Thông tin liên hệ + QR + Mạng xã hội -->
        <div>
            <h4 class="text-white border-l-4 border-primary pl-4">@contactUs</h4>
            <div class="space-y-2 text-justify">                
                <p class="text-white">@Html.Raw(workingHours)</p>
            </div>
            <div class="flex items-center gap-4 mt-6">
                @if (!string.IsNullOrEmpty(qrUrl))
                {
                    <img id="qrImage" alt="QR Code"  class="h-20 w-20"/>
                }
                <div class="flex flex-col gap-2">
                    <h5 class="text-white">@followUs</h5>
                    <div class="flex gap-2">
                        @if (!string.IsNullOrWhiteSpace(facebook))
                        {
                            <a href="@facebook" target="_blank" aria-label="Facebook" title="Facebook" class="p-2 rounded-full bg-white/10 hover:text-primary transition-all duration-300">
