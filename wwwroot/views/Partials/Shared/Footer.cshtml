<script>
    var fullUrlWithHash = window.location.href;
    var qrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=120x120&data=${encodeURIComponent(fullUrlWithHash)}`;
    document.getElementById("qrImage").src = qrUrl;
</script>