@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>
@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions
@using Umbraco.Cms.Core.Models.PublishedContent

@{
    var settings = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "companySettings");
    if (settings == null)
    {
        return;
    }
    var companyName = settings.Value<string>("companyName") ?? "Viet Thang Loi Technology Company Limited";
    var websiteLogoLight = settings.Value<IEnumerable<IPublishedContent>>("websiteLogo")?.FirstOrDefault();
    var websiteLogoDark = settings.Value<IEnumerable<IPublishedContent>>("websiteLogoDark")?.FirstOrDefault();
}
<header class="bg-gray-100 text-gray-800 dark:bg-dark dark:text-slogan shadow-xl py-4 px-6 flex justify-between items-center sticky top-0 z-50">
    <div class="flex items-center">
        <a href="/" title="@companyName" class="inline-block focus:outline-none">
            @if (websiteLogoLight != null || websiteLogoDark != null)
            {
                @if (websiteLogoLight != null)
                {
                    <div class="dark:hidden">
                        <img src="@websiteLogoLight.Url()" 
                            alt="@companyName logo (light)"
                            class="h-10 w-auto transition-opacity duration-300" />
                    </div>
                }
                @if (websiteLogoDark != null)
                {
                    <div class="hidden dark:inline-block">
                        <img src="@websiteLogoDark.Url()" 
                            alt="@companyName logo (dark)"
                            class="h-10 w-auto transition-opacity duration-300" />
                    </div>
                }
            }
            else
            {
                <span class="text-xl font-bold text-gray-900 dark:text-white">@companyName</span>
            }
        </a>
    </div>
    @await Html.PartialAsync("Partials/Shared/Navigation", Model)
</header>