@inherits UmbracoViewPage<IPublishedContent>
@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions

@{
    var address = Model.Value<string>("companyAddress");
    var locationUrl = Model.Value<IEnumerable<Link>>("companyLocation")?.FirstOrDefault()?.Url;
    var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;

    var facebook = Model.Value<IEnumerable<Link>>("facebookUrl")?.FirstOrDefault()?.Url;
    var youtube = Model.Value<IEnumerable<Link>>("youtubeUrl")?.FirstOrDefault()?.Url;
    var twitter = Model.Value<IEnumerable<Link>>("twitterUrl")?.FirstOrDefault()?.Url;
}
<div class="bg-brand-gray-light text-gray-800 text-sm py-1 px-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
        
        <!-- Địa chỉ công ty (ẩn trên mobile) -->
        <div class="hidden md:flex items-center gap-2 text-xs">
            @if (!string.IsNullOrWhiteSpace(address))
            {
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-brand-primary-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z M12 22s8-6.5 8-11.5A8 8 0 004 10.5C4 15.5 12 22 12 22z" />
                </svg>
                <a href="@locationUrl" target="_blank" class="hover:text-brand-primary-orange underline">@address</a>
            }
        </div>

        <!-- Mạng xã hội + chuyển ngữ -->
        <div class="flex items-center gap-3">
            @if (!string.IsNullOrWhiteSpace(facebook))
            {
                <a href="@facebook" target="_blank" aria-label="Facebook"
                   class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                        <circle cx="16" cy="16" r="16" fill="#1877F2"/>
                        <path d="M21.5 11h-2.4c-.3 0-.6.3-.6.6v1.9h3l-.4 3h-2.6v7h-3v-7h-2v-3h2v-2.2c0-2 1.2-3.1 3-3.1h2.6v3z" fill="#fff"/>
                    </svg>
                </a>
            }

            @if (!string.IsNullOrWhiteSpace(youtube))
            {
                <a href="@youtube" target="_blank" aria-label="YouTube"
                   class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                        <rect width="32" height="32" rx="6" fill="#FF0000"/>
                        <polygon points="13,10 23,16 13,22" fill="#fff"/>
                    </svg>
                </a>
            }

            @if (!string.IsNullOrWhiteSpace(twitter))
            {
                <a href="@twitter" target="_blank" aria-label="Twitter"
                   class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full bg-white/10 hover:bg-white/20 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                        <rect width="32" height="32" rx="6" fill="#000"/>
                        <path d="M10 10l12 12m0-12L10 22" stroke="#fff" stroke-width="2"/>
                    </svg>
                </a>
            }

            <!-- EN -->
            <a href="/en" title="English" aria-label="English"
               class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full transition
                      @(currentCulture == "en" ? "bg-brand-primary-orange text-white" : "text-gray-700 hover:bg-white/20")">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                    <rect width="32" height="32" rx="4" fill="#00247D"/>
                    <path d="M0 0 L32 32 M32 0 L0 32" stroke="#fff" stroke-width="4"/>
                </svg>
            </a>

            <!-- VN -->
            <a href="/vi" title="Tiếng Việt" aria-label="Tiếng Việt"
               class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full transition
                      @(currentCulture == "vi" ? "bg-brand-primary-orange text-white" : "text-gray-700 hover:bg-white/20")">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                    <rect width="32" height="32" rx="4" fill="#DA251D"/>
                    <polygon points="16,6 18,14 26,14 19,18 21,26 16,21 11,26 13,18 6,14 14,14" fill="#FF0"/>
                </svg>
            </a>
        </div>
    </div>
</div>
