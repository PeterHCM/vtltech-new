@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<IPublishedContent>
@using Umbraco.Cms.Core.Models
@using Umbraco.Extensions
@using System.Globalization

@{
    var settings = Umbraco.ContentAtRoot().FirstOrDefault(x => x.ContentType.Alias == "companySettings");

    if (settings == null)
    {
        return;
    }

    var address = settings.Value<string>("companyAddress") ?? "19A Cộng Hòa, Phường Bảy Hiền, Thành phố Hồ Chí Minh";
    var locationUrl = settings.Value<IEnumerable<Link>>("companyLocation")?.FirstOrDefault()?.Url ?? "#";
    var facebook = settings.Value<IEnumerable<Link>>("facebookUrl")?.FirstOrDefault()?.Url ?? "#";
    var youtube = settings.Value<IEnumerable<Link>>("youtubeUrl")?.FirstOrDefault()?.Url ?? "#";
    var twitter = settings.Value<IEnumerable<Link>>("twitterUrl")?.FirstOrDefault()?.Url ?? "#";

    var currentCulture = CultureInfo.CurrentCulture.Name;
    var isVietnamese = currentCulture == "vi-VN";
    var switchLangUrl = isVietnamese ? Model.Url("en") : Model.Url("vi-VN");
    var switchLangLabel = isVietnamese ? "EN" : "VI";
    var switchLangTitle = isVietnamese ? "English" : "Tiếng Việt";
    var currentDomain = Context.Request.Host.Value;
    var isIntranet = currentDomain.Contains("intranet");
}

<div class="bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-white text-sm py-1 px-6">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
        <div class="hidden md:flex items-center gap-2 text-xs">
            @if (!string.IsNullOrWhiteSpace(address))
            {
                <div class="flex items-center gap-1 whitespace-nowrap">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M12 11.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z M12 22s8-6.5 8-11.5A8 8 0 004 10.5C4 15.5 12 22 12 22z" />
                    </svg>
                    <a href="@locationUrl" target="_blank" class="hover:text-primary dark:text-gray-200">@address</a>
                </div>
            }
        </div>
        <div class="flex items-center gap-3 ml-auto">
            @if (!string.IsNullOrWhiteSpace(facebook))
            {
                <a href="@facebook" target="_blank" aria-label="Facebook" title="Facebook"
                   class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full bg-gray-200 dark:bg-gray-700 hover:opacity-80 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                        <circle cx="16" cy="16" r="16" fill="#1877F2"/>
                        <path d="M21.5 11h-2.4c-.3 0-.6.3-.6.6v1.9h3l-.4 3h-2.6v7h-3v-7h-2v-3h2v-2.2c0-2 1.2-3.1 3-3.1h2.6v3z" fill="#fff"/>
                    </svg>
                </a>
            }
            @if (!string.IsNullOrWhiteSpace(youtube))
            {
                <a href="@youtube" target="_blank" aria-label="YouTube" title="Youtube"
                   class="w-7 h-7 p-1.5 flex items-center justify-center rounded-full bg-gray-200 dark:bg-gray-700 hover:opacity-80 transition">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-4 h-4">
                        <rect width="32" height="32" rx="6" fill="#FF0000"/>
                        <polygon points="13,10 23,16 13,22" fill="#fff"/>
                    </svg>
                </a>
            }
            @if (!isIntranet)
            {
                <a href="@switchLangUrl"
                title="@switchLangTitle"
                class="flex items-center gap-1 text-xs hover:text-primary transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                        <path d="M15 8a.5.5 0 00-.5-.5H12a.5.5 0 000 1h2.5a.5.5 0 00.5-.5zM12 11a.5.5 0 00-.5-.5H9.5a.5.5 0 000 1H11.5a.5.5 0 00.5-.5z" />
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM7 9.5a2.5 2.5 0 100-5 2.5 2.5 0 000 5z" clip-rule="evenodd" />
                    </svg>
                    <span>@switchLangLabel</span>
                </a>
            }
            <button id="theme-toggle" class="flex items-center gap-1 text-xs hover:text-primary transition-colors">
                <svg id="theme-toggle-dark-icon" class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                </svg>
                <svg id="theme-toggle-light-icon" class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10 2a8 8 0 110 16 8 8 0 010-16zM3 10a7 7 0 007 7V3a7 7 0 00-7 7z"></path>
                </svg>
            </button>
        </div>
    </div>
</div>