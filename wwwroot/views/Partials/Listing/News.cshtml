@using Umbraco.Cms.Core.Models.PublishedContent
@using Umbraco.Extensions
@inject Umbraco.Cms.Web.Common.UmbracoHelper Umbraco
@model IEnumerable<IPublishedContent>

@{
    var viewMoreText = Umbraco?.GetDictionaryValue("viewMoreText") ?? "ĐỌC TIẾP";
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    @foreach (var item in Model)
    {
        var publishDate = item.UpdateDate;
        var title = item.Name;
        var description = item.Value<string>("description");
        
        var imgMedia = item.Value<IEnumerable<IPublishedContent>>("image")?.FirstOrDefault();
        var imageUrl = imgMedia != null ? imgMedia.GetCropUrl(600, 400) : "/media/default/VTL_thumb.jpg";

        <article class="group relative flex flex-col h-full bg-white dark:bg-[#0a0a0b] border border-slate-200 dark:border-white/5 overflow-hidden transition-all duration-500 hover:border-primary/40 shadow-sm hover:shadow-2xl hover:shadow-primary/10">
            
            @* 1. Media Section: Kiểu khung ngắm báo chí *@
            <div class="relative aspect-video overflow-hidden">
                <a href="@item.Url()" class="block w-full h-full">
                    <img src="@imageUrl" alt="@title" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 grayscale-[30%] group-hover:grayscale-0" loading="lazy" />
                </a>
                
                @* Tag ngày tháng kiểu Badge kỹ thuật *@
                <div class="absolute top-0 left-0 bg-primary px-3 py-1 z-20 shadow-lg">
                    <span class="font-mono text-[10px] text-white font-bold">@publishDate.ToString("dd.MM.yyyy")</span>
                </div>

                @* Scanner Effect (Đặc trưng hệ thống) *@
                <div class="absolute inset-x-0 top-0 h-[2px] bg-primary/60 shadow-[0_0_15px_rgba(59,130,246,0.8)] opacity-0 group-hover:opacity-100 group-hover:animate-vtl-scan z-10 pointer-events-none"></div>
            </div>

            @* 2. Content Section *@
            <div class="p-6 flex flex-col flex-grow relative">
                @* Họa tiết trang trí 1 góc *@
                <div class="absolute top-0 right-0 w-12 h-12 opacity-[0.03] dark:opacity-[0.07] pointer-events-none" style="background-image: radial-gradient(#3b82f6 1px, transparent 1px); background-size: 6px 6px;"></div>

                <div class="flex-grow">
                    @* Category giả lập để tăng tính Tech *@
                    <span class="text-[9px] font-black tracking-[0.3em] text-primary uppercase mb-2 block">System_Updates</span>
                    
                    <h3 class="text-lg font-black uppercase tracking-tighter text-slate-900 dark:text-white group-hover:text-primary transition-colors line-clamp-2 mb-4 leading-tight">
                        <a href="@item.Url()">@title</a>
                    </h3>

                    @if (!string.IsNullOrWhiteSpace(description))
                    {
                        <p class="text-sm text-slate-500 dark:text-slate-400 line-clamp-3 leading-relaxed font-medium">
                            @description
                        </p>
                    }
                </div>

                @* 3. Meta & Action Footer *@
                <div class="mt-8 pt-4 border-t border-slate-100 dark:border-white/5 flex items-center justify-between">
                    @* Info: Tác giả *@
                    <div class="flex items-center gap-2">
                        <div class="w-5 h-[1px] bg-primary/40"></div>
                        <span class="text-[10px] font-bold text-slate-400 uppercase tracking-widest">Admin</span>
                    </div>

                    @* Link: Nút đọc tiếp Industrial *@
                    <a href="@item.Url()" class="group/link flex items-center gap-2">
                        <span class="text-[10px] font-black text-primary uppercase tracking-[0.1em]">@viewMoreText</span>
                        <div class="w-6 h-6 rounded-full border border-primary/20 flex items-center justify-center group-hover/link:bg-primary group-hover/link:border-primary transition-all duration-300">
                            <svg class="w-3 h-3 text-primary group-hover/link:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                            </svg>
                        </div>
                    </a>
                </div>
            </div>
            
            @* Decor góc chỉ hiện khi hover *@
            <div class="absolute bottom-0 left-0 w-2 h-2 border-b border-l border-primary opacity-0 group-hover:opacity-100 transition-all"></div>
        </article>
    }
</div>

<style>
    @@keyframes vtl-scan {
        0% { top: 0%; opacity: 0; }
        50% { opacity: 1; }
        100% { top: 100%; opacity: 0; }
    }
    .animate-vtl-scan {
        animation: vtl-scan 3.5s ease-in-out infinite;
    }
</style>