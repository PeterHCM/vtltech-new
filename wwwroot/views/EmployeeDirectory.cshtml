@using Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models;
@using Umbraco.Cms.Core.Security;
@using Umbraco.Cms.Core.Services;
@using Umbraco.Extensions;
@using System.Text.Json;
@using System.Collections.Generic;
@inject IMemberManager memberManager
@inject IMemberService memberService

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<EmployeeDirectory>

@{
    Layout = "layout.cshtml";

    var currentMember = await memberManager.GetCurrentMemberAsync();
    var members = new List<IMember>();

    if (currentMember != null)
    {
        var currentGroups = await memberManager.GetRolesAsync(currentMember);
        if (currentGroups.Contains("BOD") || currentGroups.Contains("Manager"))
        {
            var allMembers = memberService.GetAllMembers();
            if (allMembers != null)
            {
                members = allMembers
                    .Where(m => m.ContentTypeAlias == "Member")
                    .OrderBy(m => m.GetValue<string>("fullName") ?? m.Name)
                    .ToList();
            }
        }
        else
        {
            var memberEntity = memberService.GetByKey(currentMember.Key);
            if (memberEntity != null) members.Add(memberEntity);
        }
    }
}

@await Html.PartialAsync("Partials/Shared/banner")

<style>
    :root {
        --vtl-orange: #e06800;
        --vtl-teal: #006361;
    }
    .bg-vtl-orange { background-color: var(--vtl-orange); }
    .text-vtl-orange { color: var(--vtl-orange); }
    .bg-vtl-teal { background-color: var(--vtl-teal); }
    .text-vtl-teal { color: var(--vtl-teal); }
    .from-vtl-orange { --tw-gradient-from: var(--vtl-orange) var(--tw-gradient-from-position); }
    .to-vtl-teal { --tw-gradient-to: var(--vtl-teal) var(--tw-gradient-to-position); }
</style>

<section class="vtl-container py-12">
    <div class="mb-12">
        <h1 class="text-4xl font-black text-gray-900 dark:text-white uppercase">@Model.Title</h1>
        <div class="h-1.5 w-32 bg-gradient-to-r from-vtl-orange to-vtl-teal rounded-full mt-3"></div>
    </div>

    <div class="space-y-12">
        @foreach (var m in members)
        {
            var name = m.GetValue<string>("fullName") ?? m.Name;
            
            // Xử lý ảnh
            string photoUrl = "https://placehold.co/300x300/f3f4f6/e06800?text=VTL";
            var photoVal = m.GetValue("photo");
            if (photoVal is string json && json.StartsWith("[")) {
                try {
                    using var doc = JsonDocument.Parse(json);
                    var key = doc.RootElement[0].GetProperty("mediaKey").GetGuid();
                    photoUrl = Umbraco.Media(key)?.Url() ?? photoUrl;
                } catch { }
            }

            // Xử lý Dropdowns
            var posRaw = m.GetValue<string>("position");
            var pos = posRaw?.StartsWith("[") == true ? JsonSerializer.Deserialize<List<string>>(posRaw)?.FirstOrDefault() : posRaw;
            var depRaw = m.GetValue<string>("department");
            var dep = depRaw?.StartsWith("[") == true ? JsonSerializer.Deserialize<List<string>>(depRaw)?.FirstOrDefault() : depRaw;

            <div class="group relative bg-white dark:bg-gray-900 rounded-[3rem] shadow-xl border border-gray-100 dark:border-gray-800 overflow-hidden">
                <div class="p-8 md:p-10">
                    <div class="flex flex-col lg:flex-row gap-10">
                        
                        @* Cột 1: Profile *@
                        <div class="lg:w-1/4 flex flex-col items-center lg:items-start">
                            <div class="relative mb-6">
                                <div class="absolute -inset-2 bg-gradient-to-tr from-vtl-orange to-vtl-teal rounded-[2.5rem] opacity-20 group-hover:opacity-40 transition-opacity"></div>
                                <img src="@photoUrl" class="relative w-40 h-40 rounded-[2.2rem] object-cover bg-white p-1 shadow-lg" />
                            </div>
                            <h3 class="text-2xl font-black text-gray-900 dark:text-white">@name</h3>
                            <span class="mt-2 px-3 py-1 bg-vtl-orange/10 text-vtl-orange text-[10px] font-black uppercase rounded-full">@pos</span>
                            
                            <div class="flex gap-3 mt-6">
                                <a href="tel:@m.GetValue("phone")" class="w-10 h-10 rounded-xl bg-vtl-orange text-white flex items-center justify-center hover:scale-110 transition-transform shadow-lg shadow-vtl-orange/30">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.074 1.21a11.023 11.023 0 006.105 6.105l1.21-2.074a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                                </a>
                                <a href="mailto:@m.GetValue("personalEmail")" class="w-10 h-10 rounded-xl bg-vtl-teal text-white flex items-center justify-center hover:scale-110 transition-transform shadow-lg shadow-vtl-teal/30">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                                </a>
                            </div>
                        </div>

                        @* Cột 2: Details *@
                        <div class="lg:w-3/4 space-y-8">
                            @* Thông tin chung *@
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 bg-gray-50/50 dark:bg-white/5 p-6 rounded-[2rem] border border-gray-100 dark:border-gray-800">
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase">Phòng ban</label>
                                    <span class="text-sm font-bold text-gray-700 dark:text-gray-200">@dep</span>
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase">Ngày vào làm</label>
                                    <span class="text-sm font-bold text-gray-700 dark:text-gray-200">@(m.GetValue<DateTime?>("dateOfJoining")?.ToString("dd/MM/yyyy") ?? "---")</span>
                                </div>
                                <div>
                                    <label class="block text-[10px] font-bold text-gray-400 uppercase">Mã số thuế</label>
                                    <span class="text-sm font-bold text-gray-700 dark:text-gray-200">@m.GetValue("taxCode")</span>
                                </div>
                            </div>

                            @* Khu vực Liên hệ khẩn cấp - HIỂN THỊ CẢ 2 *@
                            <div class="space-y-4">
                                <h4 class="text-[10px] font-black uppercase tracking-[0.2em] text-vtl-orange flex items-center gap-2">
                                    <span class="w-4 h-0.5 bg-vtl-orange"></span> Liên hệ khẩn cấp
                                </h4>
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    @* Người thứ 1 *@
                                    <div class="p-5 bg-white dark:bg-gray-800 rounded-3xl border-l-4 border-vtl-orange shadow-sm flex items-center justify-between">
                                        <div>
                                            <p class="text-[10px] font-bold text-gray-400 uppercase">Người thân 1</p>
                                            <p class="text-sm font-black text-gray-900 dark:text-white uppercase mt-1">@m.GetValue("emergencyContact1Name")</p>
                                            <p class="text-xs font-bold text-vtl-orange">@m.GetValue("emergencyContact1Phone")</p>
                                        </div>
                                        <div class="opacity-10 text-vtl-orange"><svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/></svg></div>
                                    </div>

                                    @* Người thứ 2 *@
                                    <div class="p-5 bg-white dark:bg-gray-800 rounded-3xl border-l-4 border-vtl-teal shadow-sm flex items-center justify-between">
                                        <div>
                                            <p class="text-[10px] font-bold text-gray-400 uppercase">Người thân 2</p>
                                            <p class="text-sm font-black text-gray-900 dark:text-white uppercase mt-1">@m.GetValue("emergencyContact2Name")</p>
                                            <p class="text-xs font-bold text-vtl-teal">@m.GetValue("emergencyContact2Phone")</p>
                                        </div>
                                        <div class="opacity-10 text-vtl-teal"><svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/></svg></div>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>