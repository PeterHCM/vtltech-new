@using Umbraco.Cms.Web.Common.PublishedModels
@using Umbraco.Cms.Core.Models.Blocks
@inherits UmbracoViewPage<Home>
@{
    Layout = "layout.cshtml";
    var blocks = Model.Value<BlockGridModel>("contentBlocks");
}
<section class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 py-10">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-12 gap-4">
            @foreach (var block in blocks)
            {
                @Html.Partial($"Partials/blockgrid/{block.Content.ContentType.Alias}.cshtml", block)
            }
        </div>
    </div>
</section>
